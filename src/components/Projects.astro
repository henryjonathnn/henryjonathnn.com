---
import Booktopia from "../assets/booktopia.png";
import Archiloft from "../assets/archiloft.png";
---

<section class="mb-16">
  <h2 class="text-xl font-bold mb-6">My Projects</h2>

  <div class="space-y-8">
    <!-- Booktopia Project -->
    <div class="flex gap-4">
      <div class="w-full max-w-40 flex-shrink-0">
        <img
          src={Booktopia.src}
          alt="Booktopia"
          class="w-full h-full object-cover rounded-lg"
        />
      </div>

      <div class="flex-1 min-w-0 flex flex-col">
        <div class="flex items-start justify-between gap-2 mb-2">
          <h3 class="text-lg font-semibold">Booktopia</h3>
          <span class="text-gray-400 text-sm flex-shrink-0">2024</span>
        </div>
        <p class="text-gray-400 mb-3 text-sm">Modern Library Management System</p>

        <div class="flex flex-wrap gap-2 text-xs mt-auto">
          <span class="px-2 py-1 bg-gray-800 text-gray-300 rounded"
            >Node JS</span
          >
          <span class="px-2 py-1 bg-gray-800 text-gray-300 rounded"
            >React JS</span
          >
          <span class="px-2 py-1 bg-gray-800 text-gray-300 rounded"
            >Tailwind CSS</span
          >
          <span class="px-2 py-1 bg-gray-800 text-gray-300 rounded"
            >MySQL</span
          >
          <span class="px-2 py-1 bg-gray-800 text-gray-300 rounded">Prisma ORM</span>
        </div>
      </div>
    </div>

    <!-- Archiloft Project -->
    <div class="flex gap-4">
      <div class="w-full max-w-40 flex-shrink-0">
        <img
          src={Archiloft.src}
          alt="Archiloft"
          class="w-full h-full object-cover rounded-lg"
        />
      </div>

      <div class="flex-1 min-w-0 flex flex-col">
        <div class="flex items-start justify-between gap-2 mb-2">
          <h3 class="text-lg font-semibold">Archiloft</h3>
          <span class="text-gray-400 text-sm flex-shrink-0">2024</span>
        </div>
        <p class="text-gray-400 mb-3 text-sm">Architecture Professional Service Website</p>

        <div class="flex flex-wrap gap-2 text-xs mt-auto">
          <span class="px-2 py-1 bg-gray-800 text-gray-300 rounded"
            >Laravel</span
          >
          <span class="px-2 py-1 bg-gray-800 text-gray-300 rounded"
            >Livewire</span
          >
          <span class="px-2 py-1 bg-gray-800 text-gray-300 rounded"
            >Tailwind CSS</span
          >
          <span class="px-2 py-1 bg-gray-800 text-gray-300 rounded"
            >MySQL</span
          >
          <span class="px-2 py-1 bg-gray-800 text-gray-300 rounded">Prisma ORM</span>
        </div>
      </div>
    </div>
  </div>
</section>
