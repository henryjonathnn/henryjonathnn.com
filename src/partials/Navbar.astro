---
import profile from '../assets/me.jpg'
---

<header class="flex items-center justify-between mb-12">
  <div class="flex items-center gap-4">
    <!-- Profile Avatar - Clickable -->
    <button id="profileBtn" class="transition-transform hover:scale-105">
      <img 
        src={profile.src} 
        alt="Profile Avatar" 
        class="w-10 h-10 rounded-full border-2 border-transparent hover:border-blue-400 transition-colors cursor-pointer" 
      />
    </button>

    <!-- Navigation -->
    <nav class="flex items-center gap-4 text-gray-300 text-sm">
      <a href="#" class="hover:text-white transition-colors">home</a>
      <a href="#" class="hover:text-white transition-colors">blog</a>
      <a href="#" class="hover:text-white transition-colors">contact</a>
    </nav>
  </div>

  <!-- Theme Toggle -->
  <button class="text-gray-300 hover:text-white transition-colors">
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
      <path
        fill-rule="evenodd"
        d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
        clip-rule="evenodd"></path>
    </svg>
  </button>
</header>

<!-- Modal Profile - Glass Design -->
<div id="profileModal" class="fixed top-4 right-4 z-50 hidden transform transition-all duration-500 translate-x-full opacity-0" id="profileModal">
  <div class="w-80 backdrop-blur-xl bg-white/10 dark:bg-gray-900/20 border border-white/20 dark:border-gray-700/30 rounded-2xl p-6 shadow-2xl" id="modalContent">
    <!-- Close Button -->
    <button id="closeModal" class="absolute top-4 right-4 text-white/60 hover:text-white/90 transition-colors">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Profile Content -->
    <div class="text-center">
      <!-- Profile Photo with glow effect -->
      <div class="mb-6 relative">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-400 to-purple-500 rounded-full blur-lg opacity-30 animate-pulse"></div>
        <img 
          src={profile.src} 
          alt="Profile Photo" 
          class="relative w-20 h-20 rounded-full mx-auto border-2 border-white/30 shadow-lg"
        />
      </div>

      <!-- Profile Info with glassmorphism cards -->
      <div class="space-y-3">
        <div class="bg-white/5 dark:bg-gray-800/20 backdrop-blur-sm rounded-xl p-3 border border-white/10">
          <div class="text-sm text-white/60 mb-1">Full Name</div>
          <div class="text-white font-medium">Henry Jonathan Chandra</div>
        </div>
        
        <div class="flex gap-3">
          <div class="flex-1 bg-white/5 dark:bg-gray-800/20 backdrop-blur-sm rounded-xl p-3 border border-white/10">
            <div class="text-sm text-white/60 mb-1">Age</div>
            <div class="text-white font-medium">18</div>
          </div>
          <div class="flex-1 bg-white/5 dark:bg-gray-800/20 backdrop-blur-sm rounded-xl p-3 border border-white/10">
            <div class="text-sm text-white/60 mb-1">Status</div>
            <div class="flex items-center justify-center gap-1">
              <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
              <span class="text-white text-sm">Online</span>
            </div>
          </div>
        </div>
        
        <div class="bg-white/5 dark:bg-gray-800/20 backdrop-blur-sm rounded-xl p-3 border border-white/10">
          <div class="text-sm text-white/60 mb-1">Role</div>
          <div class="text-white font-medium">Full-Stack Developer</div>
        </div>
        
        <div class="bg-white/5 dark:bg-gray-800/20 backdrop-blur-sm rounded-xl p-3 border border-white/10">
          <div class="text-sm text-white/60 mb-1">Location</div>
          <div class="text-white font-medium flex items-center justify-center gap-2">
            <svg class="w-4 h-4 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
            </svg>
            Kediri, Indonesia
