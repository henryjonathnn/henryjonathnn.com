</div>

<script>
  // Get elements
  const profileBtn = document.getElementById('profileBtn');
  const profileModal = document.getElementById('profileModal');
  const modalContent = document.getElementById('modalContent');
  const closeModal = document.getElementById('closeModal');

  // Open modal
  profileBtn.addEventListener('click', () => {
    profileModal.classList.remove('hidden');
    
    // Trigger slide-in animation
    setTimeout(() => {
      profileModal.classList.remove('translate-x-full', 'opacity-0');
      profileModal.classList.add('translate-x-0', 'opacity-100');
    }, 10);
  });

  // Close modal function
  const closeModalFn = () => {
    profileModal.classList.remove('translate-x-0', 'opacity-100');
    profileModal.classList.add('translate-x-full', 'opacity-0');
    
    setTimeout(() => {
      profileModal.classList.add('hidden');
    }, 500);
  };

  // Close modal events
  closeModal.addEventListener('click', closeModalFn);

  // Close with Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !profileModal.classList.contains('hidden')) {
      closeModalFn();
    }
  });
</script>